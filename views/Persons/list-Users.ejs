<%- include("../_header") -%>
<h1>List of Persons (<%= model.length %>)</h1>


<div class="table-responsive-sm">
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th>#</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>EmailAddress</th>
                <th>phone</th>
                <td class="d-print-none">
                    <a class="btn btn-mm btn-warning" href="/listUsers/add">Add</a>
                </td>
            </tr>
        </thead>
        <tbody>
            <% for (const user of model) { %>
            <tr>
                <td><%= user.PersonID %></td>
                <td><%= user.FirstName %></td>
                <td><%= user.LastName %></td>
                <td><%= user.EmailAddress %></td>
                <td><%= user.phone %></td>
                <td class="d-print-none">
                    <a class="btn btn-sm btn-info" href="/listUsers/userpage/<%= user.PersonID %>">user page</a>
                    <a class="btn btn-sm btn-danger delete-button"
                        href="/listUsers/delete/<%= user.PersonID %>">Delete</a>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>


    <%- include("../_footer") -%>